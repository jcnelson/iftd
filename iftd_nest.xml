<iftd>

   <!-- iftd stork nest configuration.  Sending and receiving allowed -->

   <filechunks path="/tmp/iftd/files/"/>
   <send_files path="/tmp/iftd-send" />
   <recv_files path="/tmp/iftd-recv" />

   <xmlrpc port="4002" dir="RPC2"/>
   <stats retrain_freq="25" classifier="NaiveBayes" />

   <protocol name="http">
      <sender>
         <setup type="int"  PROTO_PORTNUM="8001"/>
      </sender>
      <receiver>
         <setup type="int" PROTO_PORTNUM="80"/>
      </receiver>
   </protocol>

   <protocol name="nest_helper">
      <!-- HTTP server for stork clients to talk to to ask the nest IFTD to get files for them -->
      <sender>
      </sender>
      <receiver>
         <setup type="int" HTTP_PORTNUM="6650"/>
         <setup type="str" HTTP_RECV_DIR="/tmp/iftd-recv/nest_helper/"/>
      </receiver>
   </protocol>
   
   <protocol name="bittorrent">
      <sender>
      </sender>
      <receiver>
         <setup type="int"  IFTBITTORRENT_PORTRANGE_LOW="6500"/>
         <setup type="int"  IFTBITTORRENT_PORTRANGE_HIGH="6700"/>
         <setup type="bool" IFTBITTORRENT_USE_DHT="True"/>
      </receiver>
   </protocol>
   <protocol name="iftcache">
      <sender>
         <setup type="str" IFTCACHE_BASEDIR="/tmp/iftd-recv/iftd_cache"/>
      </sender>
      <receiver>
         <setup type="int" IFTCACHE_SQUID_PORTNUM="31128"/>
      </receiver>
   </protocol>
